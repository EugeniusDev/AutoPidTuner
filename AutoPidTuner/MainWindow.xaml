<Window x:Class="AutoPidTuner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoPidTuner"
        mc:Ignorable="d"
        Title="Automatic PID tuner" 
        Height="700" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10 0">
        <!-- Main grid definition -->
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>

        <!-- Input info (Section 1 of main grid) -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>
            
            <Label HorizontalAlignment="Center"
                   FontSize="20" FontWeight="Bold"
                Content="Input Info"/>

            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                <StatusBar Margin="0 4">
                    <TextBlock FontSize="16" Foreground="#22aabb"
                        x:Name="FilenameTextblock"
                        Text="No"/>
                    <StatusBarItem FontSize="14" Content="file is opened"/>
                </StatusBar>
                <Button Margin="10 2" FontSize="24" MinWidth="500"
                    x:Name="OpenFileButton" Click="OpenFileButton_Click"
                    Content="Open log file (converted in .csv)"/>
            </StackPanel>
        </Grid>
        
        <!-- Status bar (Section 2 of main grid) -->
        <StatusBar Grid.Row="1" HorizontalAlignment="Center">
            <StatusBarItem FontSize="14" Margin="20 0 0 0"
                           Content="Auto PID Tuner status: "/>
            <TextBlock FontSize="16" Margin="0 0 20 0" Foreground="MediumAquamarine"
                x:Name="StatusTextblock"
                Text="Status here"/>
        </StatusBar>

        <!-- Current situation overview (Section 3 of main grid) -->
        <StackPanel Grid.Row="2" Margin="0 6">
            <Label FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"
                   Content="Aircraft info"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Right" Margin="6"
                        Text="Firmware: "/>
                    <TextBlock FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Right" Margin="6"
                        Text="Craft: "/>
                    <TextBlock FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Right" Margin="6"
                        Text="Data points: "/>
                </StackPanel>
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock FontSize="18" Text="None" Margin="6"
                        x:Name="FirmwareTextBlock"/>
                    <TextBlock FontSize="18" Text="None" Margin="6"
                        x:Name="CraftTextBlock"/>
                    <TextBlock FontSize="18" Text="None" Margin="6"
                        x:Name="DataPointsTextBlock"/>
                </StackPanel>
            </Grid>
        </StackPanel>
        
        <!-- Solution overview (Section 4 of main grid) -->
        <StackPanel Grid.Row="3">
            <Label FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"
                   Content="Solution proposition"/>
            <Grid MinHeight="170" MaxHeight="230">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <ScrollViewer>
                    <TextBlock FontSize="18" Margin="10"
                               TextWrapping="Wrap"
                        x:Name="SolutionOverviewTextblock"
                        Text="Solution here"/>
                </ScrollViewer>
                <Grid Grid.Column="1" Margin="10" Background="#eeeeee">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="1.3*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Header Row -->
                    <Border BorderBrush="Black" BorderThickness="1">
                        <TextBlock Text="Axis" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="1" Grid.Column="1">
                        <TextBlock Text="P" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="1" Grid.Column="2">
                        <TextBlock Text="I" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="1" Grid.Column="3">
                        <TextBlock Text="D" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="1" Grid.Column="4">
                        <TextBlock Text="Feedforward" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <!-- PID Values for Roll -->
                    <Border BorderBrush="Black" BorderThickness="1" Grid.Row="1">
                        <TextBlock Text="Roll" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="1" Grid.Row="1" Grid.Column="1">
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" 
                            x:Name="RollP"
                                   Text="33"/>
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="1" Grid.Row="1" Grid.Column="2">
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" 
                            x:Name="RollI"
                            Text="30.0"/>
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="1" Grid.Row="1" Grid.Column="3">
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" 
                            x:Name="RollD"
                            Text="23.0"/>
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="1" Grid.Row="1" Grid.Column="4">
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" 
                            x:Name="RollFF"
                            Text="15.0"/>
                    </Border>
                    <!-- PID Values for Pitch -->
                    <Border BorderBrush="Black" BorderThickness="1" Grid.Row="2">
                        <TextBlock Text="Pitch" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="1" Grid.Row="2" Grid.Column="1">
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" 
                            x:Name="PitchP"
                            Text="40.0"/>
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="1" Grid.Row="2" Grid.Column="2">
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                            x:Name="PitchI"
                            Text="30.0"/>
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="1" Grid.Row="2" Grid.Column="3">
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" 
                            x:Name="PitchD"
                            Text="23.0"/>
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="1" Grid.Row="2" Grid.Column="4">
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                            x:Name="PitchFF"
                            Text="15.0"/>
                    </Border>
                    <!-- PID Values for Yaw -->
                    <Border BorderBrush="Black" BorderThickness="1" Grid.Row="3">
                        <TextBlock Text="Yaw" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="1" Grid.Row="3" Grid.Column="1">
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                            x:Name="YawP"
                            Text="40.0"/>
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="1" Grid.Row="3" Grid.Column="2">
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                            x:Name="YawI"
                            Text="40.0"/>
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="1" Grid.Row="3" Grid.Column="3">
                        <TextBlock Text="-" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="1" Grid.Row="3" Grid.Column="4">
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                            x:Name="YawFF"
                            Text="40.0"/>
                    </Border>
                </Grid>
            </Grid>
            <!-- Optimization button (Section 1 of main grid) -->
            <Button Grid.Row="1" Margin="10 2" FontSize="24"
                Content="Copy CLI commands"
                    x:Name="CopyCliCommandsButton"
                    Click="CopyCliCommandsButton_Click"/>
            <Label FontSize="16" HorizontalAlignment="Center"
                Content="Make sure to enter 'save' command and hit enter after pasting tweaking commands into CLI"/>

        </StackPanel>
    </Grid>
</Window>
